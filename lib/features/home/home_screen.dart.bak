class HomeScreen extends StatefulWidget {
  const HomeScreen({super.key});

  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  int _selectedIndex = 0;
  final GlobalKey<_HomeContentState> _homeContentKey = GlobalKey<_HomeContentState>();
  final GlobalKey<_HistoryTabState> _historyTabKey = GlobalKey<_HistoryTabState>();

  late final List<Widget> _pages = <Widget>[
    HomeContent(key: _homeContentKey),
    HistoryTab(key: _historyTabKey, onMapDeleted: _onMapDeleted),
    const HelpTab(),
  ];

  void _onItemTapped(int index) {
    setState(() {
      _selectedIndex = index;
    });
    // Refresh tabs when navigating to them
    if (index == 0) {
      _homeContentKey.currentState?._refresh();
    } else if (index == 1) {
      _historyTabKey.currentState?._loadMaps();
    }
  }

  void _onMapDeleted() {
    // Refresh HomeContent after a map is deleted
    _homeContentKey.currentState?._refresh();
  }


  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: AppTheme.background,
      body: SafeArea(
        child: Column(
          children: [
            Expanded(
              child: IndexedStack(
                index: _selectedIndex,
                children: _pages,
              ),
            ),
            Material(
              color: AppTheme.background,
              child: Padding(
                padding: const EdgeInsets.symmetric(vertical: 10),
                child: Row(
                mainAxisAlignment: MainAxisAlignment.spaceAround,
                children: [
                  Expanded(child: _buildNavItem(context, Icons.home, "Home", 0)),
                  Expanded(child: _buildNavItem(context, Icons.history, "History", 1)),
                  Expanded(child: _buildNavItem(context, Icons.help_outline, "Help", 2)),
                ],
              ),
            ),
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildNavItem(BuildContext context, IconData icon, String label, int index) {
    final isSelected = _selectedIndex == index;
    return InkWell(
      onTap: () => _onItemTapped(index),
      child: Padding(
        padding: const EdgeInsets.symmetric(vertical: 8),
        child: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            Icon(
              icon, 
              color: isSelected ? AppTheme.primary : AppTheme.textSecondary,
              size: 24,
            ),
            const SizedBox(height: 4),
            Text(
              label,
              style: TextStyle(
                color: isSelected ? AppTheme.primary : AppTheme.textSecondary,
                fontSize: 12,
                fontWeight: isSelected ? FontWeight.w600 : FontWeight.normal,
              ),
            ),
          ],
        ),
      ),
    );
  }
}

class HomeContent extends StatefulWidget {
  const HomeContent({super.key});

  @override
  State<HomeContent> createState() => _HomeContentState();
}

class _HomeContentState extends State<HomeContent> {
  int _refreshKey = 0;

  void _refresh() {
    setState(() {
      _refreshKey++;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          _buildPickPdfCard(context),
          const SizedBox(height: 40),
          const Text(
            "OR SELECT RECENT",
            style: TextStyle(
              color: AppTheme.textSecondary,
              fontSize: 12,
              letterSpacing: 1.5,
              fontWeight: FontWeight.bold,
            ),
          ),
          const SizedBox(height: 20),
          _buildRecentPlaceholder(),
        ],
      ),
    );
  }

  Widget _buildPickPdfCard(BuildContext context) {
    return Container(
      width: 300,
      height: 350,
      decoration: BoxDecoration(
        color: AppTheme.background,
        borderRadius: BorderRadius.circular(16),
        border: Border.all(color: AppTheme.accent, style: BorderStyle.none),
      ),
      child: Stack(
        children: [
          Positioned.fill(
            child: CustomPaint(
              painter: DashedBorderPainter(),
            ),
          ),
          Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Container(
                width: 80,
                height: 80,
                decoration: const BoxDecoration(
                  shape: BoxShape.circle,
                  color: Color(0xFF161B26),
                ),
                child: const Center(
                  child: Icon(Icons.map, size: 40, color: AppTheme.primary),
                ),
              ),
              const SizedBox(height: 24),
              const Text(
                "Pick Map",
                style: TextStyle(
                  fontSize: 20,
                  fontWeight: FontWeight.bold,
                  color: AppTheme.textPrimary,
                ),
              ),
              const SizedBox(height: 12),
              const Padding(
                padding: EdgeInsets.symmetric(horizontal: 24),
                child: Text(
                  "Import a floor plan, site map, or image to start overlaying your GPS position.",
                  textAlign: TextAlign.center,
                  style: TextStyle(color: AppTheme.textSecondary, height: 1.5),
                ),
              ),
              const SizedBox(height: 32),
              ElevatedButton(
                onPressed: () async {
                  await Navigator.push(
                    context,
                    MaterialPageRoute(builder: (context) => const PdfMapScreen(autoPick: true)),
                  );
                  // Refresh the recent maps when returning
                  _refresh();
                },
                style: ElevatedButton.styleFrom(
                  backgroundColor: AppTheme.surface,
                  side: const BorderSide(color: AppTheme.accent),
                  elevation: 0,
                ),
                child: const Text("Tap to Browse Files"),
              ),
            ],
          ),
        ],
      ),
    );
  }

  Widget _buildRecentPlaceholder() {
    return FutureBuilder<List<SavedMap>>(
      key: ValueKey(_refreshKey), // Force rebuild when key changes
      future: MapRepository.getMaps(),
      builder: (context, snapshot) {
        if (!snapshot.hasData || snapshot.data!.isEmpty) {
          return Container(
            width: 300,
            padding: const EdgeInsets.all(32),
            decoration: BoxDecoration(
              border: Border.all(color: AppTheme.accent.withOpacity(0.3)),
              borderRadius: BorderRadius.circular(12),
            ),
            child: const Center(
              child: Text(
                "No recent maps",
                style: TextStyle(color: AppTheme.textSecondary),
              ),
            ),
          );
        }
        
        final recentMap = snapshot.data!.first; // Most recent
        return Container(
          width: 300,
          child: Card(
            color: AppTheme.surface,
            shape: RoundedRectangleBorder(
              borderRadius: BorderRadius.circular(12),
              side: const BorderSide(color: AppTheme.accent),
            ),
            child: ListTile(
              leading: const Icon(Icons.map, color: AppTheme.primary, size: 32),
              title: Text(
                recentMap.name,
                style: const TextStyle(color: AppTheme.textPrimary, fontWeight: FontWeight.bold),
                maxLines: 1,
                overflow: TextOverflow.ellipsis,
              ),
              subtitle: Text(
                "Last opened: ${DateFormat.yMMMd().add_jm().format(recentMap.lastOpened)}",
                style: const TextStyle(color: AppTheme.textSecondary, fontSize: 12),
              ),
              trailing: const Icon(Icons.arrow_forward_ios, color: AppTheme.primary, size: 16),
              onTap: () async {
                await Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => PdfMapScreen(initialMap: recentMap)),
                );
                // Refresh when returning from map view
                _refresh();
              },
            ),
          ),
        );
      },
    );
  }
}


class HistoryTab extends StatefulWidget {
  final VoidCallback? onMapDeleted;
  
  const HistoryTab({super.key, this.onMapDeleted});

  @override
  State<HistoryTab> createState() => _HistoryTabState();
}

class _HistoryTabState extends State<HistoryTab> {
  List<SavedMap> _maps = [];
  bool _isLoading = true;

  @override
  void initState() {
    super.initState();
    _loadMaps();
  }

  @override
  void didChangeDependencies() {
    super.didChangeDependencies();
    // Reload maps when this tab becomes visible
    _loadMaps();
  }

  Future<void> _loadMaps() async {
    setState(() => _isLoading = true);
    final maps = await MapRepository.getMaps();
    if (mounted) {
      setState(() {
        _maps = maps;
        _isLoading = false;
      });
    }
  }

  Future<void> _deleteMap(String id, String mapName) async {
    // Show confirmation dialog
    final confirmed = await showDialog<bool>(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text("Delete Map?"),
        content: Text("Are you sure you want to delete '$mapName'? This action cannot be undone."),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context, false),
            child: const Text("Cancel"),
          ),
          ElevatedButton(
            onPressed: () => Navigator.pop(context, true),
            style: ElevatedButton.styleFrom(
              backgroundColor: AppTheme.error,
            ),
            child: const Text("Delete"),
          ),
        ],
      ),
    );

    if (confirmed == true) {
      await MapRepository.deleteMap(id);
      _loadMaps();
      // Notify parent that a map was deleted
      widget.onMapDeleted?.call();
      
      if (mounted) {
        UiUtils.showSuccessSnackBar(context, "Map deleted");
      }
    }
  }

  Future<void> _renameMap(SavedMap map) async {
    final controller = TextEditingController(text: map.name);
    final newName = await showDialog<String>(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text("Rename Map"),
        content: TextField(
          controller: controller,
          decoration: const InputDecoration(labelText: "Map Name"),
          autofocus: true,
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text("Cancel"),
          ),
          ElevatedButton(
            onPressed: () => Navigator.pop(context, controller.text),
            child: const Text("Rename"),
          ),
        ],
      ),
    );

    if (newName != null && newName.isNotEmpty && newName != map.name) {
      final updatedMap = SavedMap(
        id: map.id,
        name: newName,
        filePath: map.filePath,
        gps1: map.gps1,
        pdf1: map.pdf1,
        gps2: map.gps2,
        pdf2: map.pdf2,
        gps3: map.gps3,
        pdf3: map.pdf3,
        lastOpened: map.lastOpened,
      );
      await MapRepository.saveMap(updatedMap);
      _loadMaps();
    }
  }

  @override
  Widget build(BuildContext context) {
    if (_isLoading) return const Center(child: CircularProgressIndicator());
    
    if (_maps.isEmpty) {
      return Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            const Icon(Icons.history, size: 64, color: AppTheme.textSecondary),
            const SizedBox(height: 16),
            const Text("No Saved Maps", style: TextStyle(color: AppTheme.textPrimary, fontSize: 18, fontWeight: FontWeight.bold)),
            const SizedBox(height: 8),
            const Text("Calibrated maps you save will appear here.", style: TextStyle(color: AppTheme.textSecondary)),
          ],
        ),
      );
    }

    return ListView.builder(
      padding: const EdgeInsets.all(16),
      itemCount: _maps.length,
      itemBuilder: (context, index) {
        final map = _maps[index];
        return Card(
          color: AppTheme.surface,
          margin: const EdgeInsets.only(bottom: 12),
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12), side: const BorderSide(color: AppTheme.accent)),
          child: ListTile(
            leading: const Icon(Icons.map, color: AppTheme.primary, size: 32),
            title: Text(map.name, style: const TextStyle(color: AppTheme.textPrimary, fontWeight: FontWeight.bold)),
            subtitle: Text("Last opened: ${DateFormat.yMMMd().add_jm().format(map.lastOpened)}", style: const TextStyle(color: AppTheme.textSecondary, fontSize: 12)),
            trailing: Row(
              mainAxisSize: MainAxisSize.min,
              children: [
                IconButton(
                  icon: const Icon(Icons.edit_outlined, color: AppTheme.primary),
                  onPressed: () => _renameMap(map),
                ),
                IconButton(
                  icon: const Icon(Icons.delete_outline, color: AppTheme.error),
                  onPressed: () => _deleteMap(map.id, map.name),
                ),
              ],
            ),
            onTap: () {
               Navigator.push(
                context,
                MaterialPageRoute(builder: (context) => PdfMapScreen(initialMap: map)),
              ).then((_) => _loadMaps()); // Refresh on return
            },
          ),
        );
      },
    );
  }
}

